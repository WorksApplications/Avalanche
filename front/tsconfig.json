{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "rootDirs": ["src"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "public",
    "*config.js",
    "src/**/__tests__/**/*.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx"
  ]
}
